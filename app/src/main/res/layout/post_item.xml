<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_user"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_full_name"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="Full name"
        android:layout_below="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_phone"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="Phone number"
        android:layout_below="@+id/txt_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_email"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="Email"
        android:layout_below="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_region"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="Region"
        android:layout_below="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_district"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="District"
        android:layout_below="@+id/txt_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_division"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="Division"
        android:layout_below="@+id/txt_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_division"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@+id/txt_title"
        android:text="Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>